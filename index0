    <!-- Back to Top Button -->
    <a href="#" id="backToTop" class="back-to-top" style="position: fixed; bottom: 30px; right: 30px; background: var(--orange); color: white; width: 50px; height: 50px; border-radius: 50%; display: flex; align-items: center; justify-content: center; text-decoration: none; box-shadow: 0 5px 20px rgba(0,0,0,0.2); opacity: 0; visibility: hidden; transition: all 0.3s; z-index: 999;">
        <i class="fas fa-arrow-up"></i>
